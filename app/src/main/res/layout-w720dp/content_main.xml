<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cl.karangop.aboutkarina.MainActivity"
    tools:showIn="@layout/activity_main">

    <!--TIpos de comentarios-->
    <!--TODO-->
    <!--FIXME-->

    <!--TODO def linearLayout
    Ordena el contenido uno tras otro
    relativeLayout: el contenido se ordena de acuerdo a lo que uno desee

    propiedad gravity es solo para linearLayout
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="24dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:text="Layout TABLET 10 pulgadas" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/areaTv"
                android:text="Área"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/yearsTv"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Años"/>

            <TextView
                android:layout_below="@+id/areaTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android"/>

            <TextView
                android:layout_below="@id/yearsTv"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Over 9000"/>

        </RelativeLayout>


    </LinearLayout>




</android.support.v4.widget.NestedScrollView>
